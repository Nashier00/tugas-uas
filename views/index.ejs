<!DOCTYPE html>
<html lang="en">
  <!-- Head -->
  <%- include("partials/index/head.ejs") %>
  <body class="bg-gray-50 font-sans">
    <!-- Navigation Bar -->
    <%- include("partials/index/navbar.ejs") %>
    <!-- Mobile Search -->
    <div class="md:hidden bg-white py-2 px-4 border-b">
      <div class="relative w-full">
        <input
          type="text"
          placeholder="Search for courses..."
          class="w-full px-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-indigo-500"
        />
        <button class="absolute right-3 top-2 text-gray-500">
          <i class="fas fa-search"></i>
        </button>
      </div>
    </div>

    <!-- Hero Section -->
    <div
      class="bg-gradient-to-r from-indigo-500 to-purple-600 text-white py-12 px-4"
    >
      <div class="max-w-7xl mx-auto flex flex-col md:flex-row items-center">
        <div class="md:w-1/2 mb-8 md:mb-0">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">
            Advance your career with LearnHub
          </h1>
          <p class="text-xl mb-6">
            Build job-ready skills with courses, certificates, and degrees from
            world-class universities and companies.
          </p>
          <button
            class="bg-white text-indigo-600 px-6 py-3 rounded-md font-bold hover:bg-gray-100 transition"
          >
            Start Learning Today
          </button>
        </div>
        <div class="md:w-1/2">
          <img
            src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/1ca2b985-ac04-4d6d-a340-594d6fa929f1.png"
            alt="Diverse group of students learning online with laptops and taking notes"
            class="rounded-lg shadow-xl"
          />
        </div>
      </div>
    </div>

    <!-- Category Section -->
    <div class="py-12 px-4 bg-white">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-3xl font-bold mb-8">Popular Categories</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <a
            href="#"
            class="category-card p-6 rounded-lg border hover:border-indigo-500 transition flex items-center"
          >
            <div class="bg-indigo-100 p-3 rounded-full mr-4">
              <i class="fas fa-laptop-code text-indigo-600 text-xl"></i>
            </div>
            <div>
              <h3 class="font-bold">Development</h3>
              <p class="text-sm text-gray-600">1,200+ Courses</p>
            </div>
          </a>
          <a
            href="#"
            class="category-card p-6 rounded-lg border hover:border-indigo-500 transition flex items-center"
          >
            <div class="bg-purple-100 p-3 rounded-full mr-4">
              <i class="fas fa-chart-line text-purple-600 text-xl"></i>
            </div>
            <div>
              <h3 class="font-bold">Business</h3>
              <p class="text-sm text-gray-600">900+ Courses</p>
            </div>
          </a>
          <a
            href="#"
            class="category-card p-6 rounded-lg border hover:border-indigo-500 transition flex items-center"
          >
            <div class="bg-red-100 p-3 rounded-full mr-4">
              <i class="fas fa-camera-retro text-red-600 text-xl"></i>
            </div>
            <div>
              <h3 class="font-bold">Photography</h3>
              <p class="text-sm text-gray-600">500+ Courses</p>
            </div>
          </a>
          <a
            href="#"
            class="category-card p-6 rounded-lg border hover:border-indigo-500 transition flex items-center"
          >
            <div class="bg-yellow-100 p-3 rounded-full mr-4">
              <i class="fas fa-heart text-yellow-600 text-xl"></i>
            </div>
            <div>
              <h3 class="font-bold">Health & Fitness</h3>
              <p class="text-sm text-gray-600">700+ Courses</p>
            </div>
          </a>
        </div>
      </div>
    </div>

    <!-- Featured Courses -->
    <div class="py-12 px-4 bg-gray-50">
      <div class="max-w-7xl mx-auto">
        <div class="flex justify-between items-center mb-8">
          <h2 class="text-3xl font-bold">Popular Courses</h2>
          <a href="#" class="text-indigo-600 hover:underline"
            >View all courses</a
          >
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Course Card 1 -->
          <div
            class="course-card bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition duration-300"
          >
            <img
              src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/2af12e6b-4ce6-441c-a2b4-46456b8feeb7.png"
              alt="Web Development Fundamentals course with clean code examples on a dark IDE background"
              class="w-full h-48 object-cover"
            />
            <div class="p-4">
              <h3 class="font-bold text-lg mb-2">
                The Complete Web Development Bootcamp 2023
              </h3>
              <p class="text-gray-600 text-sm mb-2">Dr. Angela Yu</p>
              <div class="flex items-center mb-2">
                <div class="text-yellow-400 mr-1">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star-half-alt"></i>
                </div>
                <span class="text-gray-600 text-sm">4.7 (28,950)</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="font-bold text-lg">$89.99</span>
                <button
                  class="bg-indigo-600 text-white px-3 py-1 rounded-sm text-sm hover:bg-indigo-700 transition"
                >
                  Enroll Now
                </button>
              </div>
            </div>
            <div class="px-4 py-2 bg-indigo-50 text-indigo-700 text-sm">
              <i class="fas fa-bolt mr-1"></i> Bestseller
            </div>
          </div>

          <!-- Course Card 2 -->
          <div
            class="course-card bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition duration-300"
          >
            <img
              src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/6463eb71-f059-425f-b7d8-fd01d3d5047e.png"
              alt="Python programming course with data visualization charts and AI elements"
              class="w-full h-48 object-cover"
            />
            <div class="p-4">
              <h3 class="font-bold text-lg mb-2">
                Python for Data Science and Machine Learning
              </h3>
              <p class="text-gray-600 text-sm mb-2">Jose Portilla</p>
              <div class="flex items-center mb-2">
                <div class="text-yellow-400 mr-1">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                </div>
                <span class="text-gray-600 text-sm">4.8 (15,632)</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="font-bold text-lg">$99.99</span>
                <button
                  class="bg-indigo-600 text-white px-3 py-1 rounded-sm text-sm hover:bg-indigo-700 transition"
                >
                  Enroll Now
                </button>
              </div>
            </div>
            <div class="px-4 py-2 bg-indigo-50 text-indigo-700 text-sm">
              <i class="fas fa-bolt mr-1"></i> Bestseller
            </div>
          </div>

          <!-- Course Card 3 -->
          <div
            class="course-card bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition duration-300"
          >
            <img
              src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/57d90d36-51a0-4587-a244-7546d0c4ecdd.png"
              alt="Digital marketing strategy course with social media analytics dashboard"
              class="w-full h-48 object-cover"
            />
            <div class="p-4">
              <h3 class="font-bold text-lg mb-2">
                The Complete Digital Marketing Course - 12 Courses in 1
              </h3>
              <p class="text-gray-600 text-sm mb-2">Rob Percival</p>
              <div class="flex items-center mb-2">
                <div class="text-yellow-400 mr-1">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="far fa-star"></i>
                </div>
                <span class="text-gray-600 text-sm">4.6 (10,287)</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="font-bold text-lg">$74.99</span>
                <button
                  class="bg-indigo-600 text-white px-3 py-1 rounded-sm text-sm hover:bg-indigo-700 transition"
                >
                  Enroll Now
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div
      class="py-16 px-4 bg-gradient-to-r from-purple-600 to-indigo-700 text-white"
    >
      <div class="max-w-7xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Transform Your Career Today
        </h2>
        <p class="text-xl mb-8 max-w-3xl mx-auto">
          Join over 5 million students learning on LearnHub. Get unlimited
          access to all courses with our Premium plan.
        </p>
        <div
          class="flex flex-col md:flex-row justify-center space-y-4 md:space-y-0 md:space-x-4"
        >
          <button
            class="bg-white text-indigo-600 px-8 py-3 rounded-md font-bold hover:bg-gray-100 transition"
          >
            Start Learning for Free
          </button>
          <button
            class="bg-transparent border-2 border-white px-8 py-3 rounded-md font-bold hover:bg-white hover:text-indigo-600 transition"
          >
            Try Premium for $9.99
          </button>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include("partials/index/footer.ejs") %>
    <!-- Authentication Modal -->
    <div id="auth-modal" class="fixed inset-0 z-50 hidden auth-modal">
      <div class="absolute inset-0 bg-black opacity-50"></div>
      <div
        class="relative max-w-md w-full mx-auto my-12 bg-white rounded-lg shadow-xl overflow-hidden"
      >
        <div class="absolute right-4 top-4">
          <button
            id="close-auth-modal"
            class="text-gray-500 hover:text-gray-700"
          >
            <i class="fas fa-times text-xl"></i>
          </button>
        </div>

        <div class="px-8 py-10">
          <div class="mb-6 text-center">
            <h3 class="text-2xl font-bold">Welcome back!</h3>
            <p class="text-gray-600">
              Sign in to access your learning dashboard
            </p>
          </div>

          <form id="login-form" method="post" action="/login">
            <div class="mb-4">
              <label
                for="email"
                class="block text-gray-700 text-sm font-bold mb-2"
                >Email</label
              >
              <input
                type="email"
                name="email"
                id="email"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
                placeholder="you@example.com"
                required
              />
            </div>
            <div class="mb-6">
              <label
                for="password"
                class="block text-gray-700 text-sm font-bold mb-2"
                >Password</label
              >
              <input
                type="password"
                name="password"
                id="password"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
                placeholder="••••••••"
                required
              />
              <a
                href="#"
                class="text-sm text-indigo-600 hover:underline mt-2 inline-block"
                >Forgot password?</a
              >
            </div>
            <button
              type="submit"
              class="w-full bg-indigo-600 text-white py-3 rounded-lg font-bold hover:bg-indigo-700 transition mb-6"
            >
              Sign In
            </button>
          </form>

          <div class="text-center pt-4 border-t border-gray-200">
            <p class="text-gray-600">
              Don't have an account?
              <a
                href="#"
                id="show-signup"
                class="text-indigo-600 hover:underline"
                >Sign up</a
              >
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Signup Modal -->
    <div id="signup-modal" class="fixed inset-0 z-50 hidden auth-modal">
      <div class="absolute inset-0 bg-black opacity-50"></div>
      <div
        class="relative max-w-md w-full mx-auto my-12 bg-white rounded-lg shadow-xl overflow-hidden"
      >
        <div class="absolute right-4 top-4">
          <button
            id="close-signup-modal"
            class="text-gray-500 hover:text-gray-700"
          >
            <i class="fas fa-times text-xl"></i>
          </button>
        </div>

        <div class="px-8 py-10">
          <div class="mb-6 text-center">
            <h3 class="text-2xl font-bold">Join LearnHub</h3>
            <p class="text-gray-600">Start your learning journey today</p>
          </div>

          <form id="signup-form" method="post" action="/register">
            <div class="mb-4">
              <div>
                <label
                  for="last-name"
                  class="block text-gray-700 text-sm font-bold mb-2"
                  >Full Name</label
                >
                <input
                  type="text"
                  name="name"
                  id="last-name"
                  class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
                  placeholder="Naruto Uzumaki"
                  required
                />
              </div>
            </div>
            <div class="mb-4">
              <label
                for="signup-email"
                class="block text-gray-700 text-sm font-bold mb-2"
                >Email</label
              >
              <input
                type="email"
                name="email"
                id="signup-email"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
                placeholder="uzumaki@example.com"
                required
              />
            </div>
            <div class="mb-4">
              <label
                for="signup-password"
                class="block text-gray-700 text-sm font-bold mb-2"
                >Password</label
              >
              <input
                type="password"
                name="password"
                id="signup-password"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
                placeholder="••••••••"
                minlength="8"
                required
              />
              <p class="text-xs text-gray-500 mt-1">Minimum 8 characters</p>
            </div>
            <div class="mb-6">
              <label
                for="confirm-password"
                class="block text-gray-700 text-sm font-bold mb-2"
                >Confirm Password</label
              >
              <input
                type="password"
                id="confirm-password"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
                placeholder="••••••••"
                minlength="8"
                required
              />
            </div>
            <div class="mb-6">
              <input type="checkbox" id="terms" class="mr-2" required />
              <label for="terms" class="text-sm text-gray-700"
                >I agree to the
                <a href="#" class="text-indigo-600 hover:underline"
                  >Terms of Service</a
                >
                and
                <a href="#" class="text-indigo-600 hover:underline"
                  >Privacy Policy</a
                ></label
              >
            </div>
            <button
              type="submit"
              class="w-full bg-indigo-600 text-white py-3 rounded-lg font-bold hover:bg-indigo-700 transition mb-6"
            >
              Sign Up
            </button>
          </form>

          <div class="text-center pt-4 border-t border-gray-200">
            <p class="text-gray-600">
              Already have an account?
              <a
                href="#"
                id="show-login"
                class="text-indigo-600 hover:underline"
                >Sign in</a
              >
            </p>
          </div>
        </div>
      </div>
    </div>

    <script src="script/index.js"></script>
  </body>
</html>
